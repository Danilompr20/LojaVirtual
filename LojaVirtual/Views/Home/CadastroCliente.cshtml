
@model LojaVirtual.Models.Cliente


    <form asp-action="CadastroCliente" asp-controller="Home" method="post">
        <main role="main">

            <section class="container" style="margin-top: 50px">
                <div class="row">
                    <aside class="col-sm-6">
                        <h3 class="subtitle-doc">
                            Cadastro de Cliente
                        </h3>
                        <div id="code_register_1">
                            <div class="card">
                                <header class="card-header">
                                    <a asp-controller="Home" asp-action="Cadastro" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                    <h4 class="card-title mt-2">Login</h4>
                                </header>
                                <article class="card-body">
                                    <div class="col-sm-6 offset-sm-2">
                                        @if (TempData["MSG_S"] != null)
                                        {
                                            <p class="alert alert-success">
                                                @TempData["MSG_S"]
                                            </p>
                                        }
                                    </div>

                                    <div class="form-row">
                                        <div class="col form-group">
                                            <label asp-for="Nome">Nome </label>
                                            <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                            <span asp-validation-for="Nome" class="alert-danger"></span>
                                        </div> <!-- form-group end.// -->
                                        <div class="col form-group">
                                            <label asp-for="Nascimento">Data de Nascimento</label>
                                            <input type="date" asp-for="Nascimento" class="form-control" placeholder="">
                                        </div> <!-- form-group end.// -->
                                    </div> <!-- form-row end.// -->
                                    <div class="form-group">
                                        <label asp-for="CPF">CPF</label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                        <span asp-validation-for="CPF" class="alert-danger"></span>

                                        <label asp-for="Telefone">Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control" placeholder="">


                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                            <span class="form-check-label"> Masculino </span>
                                        </label>
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                            <span class="form-check-label"> Feminino</span>
                                        </label>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="Email">E-mail</label>
                                            <input type="email" asp-for="Email" class="form-control">
                                            <span asp-validation-for="Email" class="alert-danger"></span>
                                        </div> <!-- form-group end.// -->


                                    </div> <!-- form-row.// -->
                                    <div class="form-group">
                                        <label asp-for="Senha">Senha</label>
                                        <input class="form-control" asp-for="Senha" type="password">
                                        <span asp-validation-for="Senha" class="alert-danger"></span>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                    </div> <!-- form-group// -->
                                    <small class="text-muted">
                                        By clicking the 'Sign Up' button, you confirm that you
                                        accept our <br> Terms of use and Privacy Policy.
                                    </small>

                                </article> <!-- card-body end .// -->
                                <div class="border-top card-body text-center">já tem uma conta? <a asp-action="Login" asp-controller="Home">Entre</a></div>
                            </div> <!-- card.// -->

                        </div> <!-- code-wrap.// -->
                    </aside>
                </div>
            </section>
        </main>
    </form>